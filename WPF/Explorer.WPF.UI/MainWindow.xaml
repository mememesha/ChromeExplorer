<Window
    x:Name="Window"
    Style="{DynamicResource MainWindowStyle}"
    x:Class="Explorer.WPF.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Explorer.WPF.UI"
    Width="1300"
    Height="750"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="MainWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border Background="Black">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <!--Title Bar-->
                                    <RowDefinition Height="40"/>
                                    <!--Search TextBox-->
                                    <RowDefinition Height="40"/>
                                    <!--BookMarks-->
                                    <RowDefinition Height="36"/>
                                    <!--TabItemContent-->
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!--Title Bar-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ListBox 
                                        ItemsSource="{Binding DirectoryTabItems}" 
                                        SelectedItem="{Binding CurrentDirectoryTabItem}">
                                        <ListBox.ItemsPanel>
                                             <ItemsPanelTemplate>
                                                 <StackPanel Orientation="Horizontal">
                                                 </StackPanel>
                                             </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" />
                                                    <Button Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding DataContext.CloseCommand,ElementName=Window}" Content="X"></Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button
                                        Grid.Column="1"
                                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                        Margin="2"
                                        Command="{Binding AddNewTabCommand}"
                                        Content="+" />
                                    <StackPanel Grid.Column="2" 
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Orientation="Horizontal">
                                        <Button Click="CollapseButton_OnClick" Width="44" Height="30">_</Button>
                                        <Button Click="ExpandButton_OnClick" Width="44" Height="30">P</Button>
                                        <Button Click="CloseButton_OnClick" Width="44" Height="30">X</Button>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button 
                                        Command="{Binding CurrentDirectoryTabItem.MoveBackCommand}"
                                        Width="{Binding ActualHeight,RelativeSource={RelativeSource Self}}" 
                                        Margin="2"
                                        Grid.Column="0"
                                        Content="lt"/>
                                    <Button 
                                        Command="{Binding CurrentDirectoryTabItem.MoveForwardCommand}"
                                        Width="{Binding ActualHeight,RelativeSource={RelativeSource Self}}" 
                                        Margin="2" 
                                        Grid.Column="1" 
                                        Content="gt"/>
                                    <Button 
                                        Command="{Binding CurrentDirectoryTabItem.UpdatePageCommand}"
                                        Width="{Binding ActualHeight,RelativeSource={RelativeSource Self}}" 
                                        Margin="2"
                                        Grid.Column="2" 
                                        Content="o"/>
                                    <TextBox Grid.Column="3" Grid.Row="0" Text="{Binding CurrentDirectoryTabItem.FilePath}" />
                                </Grid>

                                <StackPanel Grid.Row="2" Background="#FF353535">
                                    <Menu>
                                        <MenuItem Header="Games"></MenuItem>
                                    </Menu>
                                </StackPanel>
                               
                                <ContentControl 
                                                Grid.Row="3"
                                                Content="{Binding CurrentDirectoryTabItem}">
                                    <ContentControl.ContentTemplate>
                                        <DataTemplate>
                                            <ui:DirectoryTabItem />
                                        </DataTemplate>
                                    </ContentControl.ContentTemplate>
                                </ContentControl>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
